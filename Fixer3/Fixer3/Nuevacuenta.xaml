<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fixer3.Nuevacuenta" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="50,50,30,30">
            <Entry Placeholder="Nombre"  AnchorX="20" AnchorY="20" Margin="0,0,0,0" FontSize="Small"></Entry>
            <Entry Placeholder="Apellido" AnchorX="50" AnchorY="20" Margin="0,0,0,0" FontSize="Small"></Entry>
            <Entry Placeholder="Contraseña" AnchorX="50" AnchorY="20" Margin="0,0,0,0" FontSize="Small"></Entry>
            <Entry Placeholder="Repite Contraseña" AnchorX="50" AnchorY="20" Margin="0,0,0,0" FontSize="Small"></Entry>
            <Button x:Name="btnRegistrar" Text="Crear Cuenta" BackgroundColor="Coral" BorderRadius="20" Margin="20,25,50,50" TextColor="Black" VerticalOptions="End" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>